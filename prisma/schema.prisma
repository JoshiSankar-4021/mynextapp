generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  posts Post[]
}

model Post{
  postid Int @id
  postedby Int
  author User @relation(fields:[postedby],references:[id])
}


model Card{
  cardid Int @id @default(autoincrement())
  cardName String @default("joshi")
}